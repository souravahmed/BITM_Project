@model IEnumerable<UCRMSApp.Models.Department>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            SL
        </th>
        <th>
            Department Code
        </th>
        <th>
            Department Name
        </th>

    </tr>



    @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i }))
    {

        <tr>
            <td>@item.Index</td>

            <td>
                @Html.DisplayFor(modelItem => item.Data.DepartmentCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data.DepartmentName)
            </td>
        </tr>
    }

</table>
